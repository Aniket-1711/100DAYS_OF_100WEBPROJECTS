{
  "manifest_version": 3,
  "name": "Peaceful New Tab",
  "version": "1.0",
  "description": "A calm and personalized new tab with greetings, backgrounds, pets, bookmarks, and top sites.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "bookmarks",
    "topSites"
  ],
  "host_permissions": [
    "https://source.unsplash.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
